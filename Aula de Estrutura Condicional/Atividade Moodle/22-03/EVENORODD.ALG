Algoritmo "evenorood"
// Indica se o número é impar ou par
Var
   numero: inteiro
Inicio
      escreval("Olá! Digite um número inteiro e eu direi se ele é ímpar ou par")
      leia(numero)
      
      se (numero % 2 = 0) entao
         escreval("O número é par")
      senao
           escreval("O número é ímpar")
      fimse
Fimalgoritmo